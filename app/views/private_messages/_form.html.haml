= form_for @private_message do |f|
  - if @private_message.errors.any?
    #error_explanation
      %h2= "#{pluralize(@private_message.errors.count, "error")} prohibited this private_message from being saved:"
      %ul
        - @private_message.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :content
    = f.text_area :content
  .field
    = f.label :user_id
    = f.number_field :user_id
  .field
    = f.label :report_id
    = f.number_field :report_id
  .actions
    = f.submit 'Save'
