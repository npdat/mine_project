.navbar.navbar-default.navbar-fixed-top{:role => "navigation"}
  .container
    .navbar-header
      %button.navbar-toggle{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", :type => "button"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.pull-left{:href => "#"}
        =image_tag("wallem-logo.png", class: "brand", style: "margin-top: 2px; height:45px")
        %span.icon-bar
      %a.navbar-brand{:href => "#"}  &nbsp;&nbsp;Report Management
    .collapse.navbar-collapse
      %ul.nav.navbar-nav.navbar-right
        - if session[:user_id]
          %li.dropdown
            %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
              Hi,
              = session[:username]
              %span.caret
            %ul.dropdown-menu{:role => "menu"}
              %li
                = link_to 'Sign out', user_sessions_destroy_path, method: :delete
              %li.divider
              %li.dropdown-header Settings
              %li
                = link_to 'Profile', ''
